<body id="signup-page">
    <div class="container">
        <div class="row">
            <div class="col-6 mt-5 mx-auto">
                <h2 class="text-center text-white">Create a &ltDevHelper/&gt Account</h2>
                <div class="card mt-3 mx-auto text-dark" style="width: 22rem;">
                    <div class="card-body">
                        <div class="card-text">
                            <form id="signup" name="signup" method="post" action="/signup">
                                <div class="form-group">
                                    <label for="email">Email Address</label>
                                    <input class="text form-control" name="email" type="email" required />
                                </div>
                                <div class="form-group">
                                    <label for="firstname">First Name</label>
                                    <input class="form-control" name="firstname" type="text" required />
                                </div>
                                <div class="form-group">
                                    <label for="lastname">Last Name</label>
                                    <input class="form-control" name="lastname" type="text" required />
                                </div>
                                <div class="form-group">
                                    <label for="password">Password</label>
                                    <input class="form-control" name="password" type="password" required />
                                </div>
                                <input class="btn btn-block btn-dark" type="submit" value="Create Account" />
                                <a href="/" class="btn btn-block btn-light btn-outline-secondary">Cancel</a>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>